<form class="col-10 col-md-4 mx-auto mt-5 needs-validation" action="/login" method="POST">
	<div class="form-group">
		<label for="usernameInput">Username</label>
		<input class="form-control" id="usernameInput" type="text" name="username" required>
	</div>
	<div class="form-group">
		<label for="passwordInput">Password</label>
		<input class="form-control" id="passwordInput" type="password" name="password" required>
	</div>

	<div class="invalid-feedback d-block">
		<p>
			<% if (message.length > 0) { %>
			<%= message %>
			<% } else { %>
			&nbsp;
			<% } %>
		</p>
	</div>

	<button class="btn btn-primary w-100" type="submit" value="Submit">Submit</button>
</form>